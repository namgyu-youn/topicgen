{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":disableDependencyDashboard"],
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "platformAutomerge": true
    }
  ],
  "pip_requirements": {
    "fileMatch": ["^requirements\\.txt$", "^requirements-dev\\.txt$", "^pyproject\\.toml$"]
  },
  "schedule": ["monthly"],
  "commitMessagePrefix": "ðŸ“¦ ",
  "commitMessage": "Update dependencies using Renovate\n\nUpdated dependencies:\n{{#each upgrades as |upgrade|}}  - {{upgrade.depName}} {{upgrade.currentVersion}} â†’ {{upgrade.newVersion}}\n{{/each}}",
  "suppressNotifications": ["prIgnoreNotification", "prEditNotification"],
  "rebaseWhen": "behind-base-branch",
  "rangeStrategy": "bump",
  "automergeType": "branch",
  "platformCommit": true,
  "dependencyDashboardApproval": false
}
